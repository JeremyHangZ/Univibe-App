<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SettingButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/button_back</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="roundedButton">
        <item name="cornerRadius">30dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/button_back</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@color/melbourne_blue</item>
    </style>
</resources>


